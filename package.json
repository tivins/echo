{
  "name": "design-toolkit",
  "version": "1.15.0",
  "description": "A modern web component library built with Lit",
  "type": "module",
  "main": "dist/design-toolkit.umd.js",
  "module": "dist/design-toolkit.esm.js",
  "unpkg": "dist/design-toolkit.umd.min.js",
  "jsdelivr": "dist/design-toolkit.umd.min.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rollup -c && npm run deploy",
    "build:vite": "tsc && vite build",
    "build:all": "npm run build && npm run build:vite",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "ootb": "npm run build && cd out-of-the-box && node webserver.js",
    "pages": "npm run build && cd docs && node webserver.js",
    "deploy": "copyfiles -u 1 dist/design-toolkit.esm.bundled.js docs/"
  },
  "keywords": [
    "web-components",
    "lit",
    "typescript",
    "design-system",
    "ui-library"
  ],
  "author": "Tivins",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^24.6.2",
    "lit": "^3.3.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "rollup": "^4.52.4"
  }
}
